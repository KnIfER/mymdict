<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_view_layout"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_centerVertical="true">
    <SearchView android:textColor="#ffffffff" android:id="@+id/search_view" android:background="@null"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="4.0dip" android:layout_marginRight="4.0dip"
              android:singleLine="true"
              android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:inputType="textFilter"
              android:imeOptions="actionSearch|flagNoExtractUi"
              android:iconifiedByDefault="false"/>

</RelativeLayout>