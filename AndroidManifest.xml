<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="cn.mdict" android:versionCode="13"
	android:versionName="1.0.3">
	<application android:icon="@drawable/app_icon" android:label="@string/app_name">
		<activity android:label="@string/app_name" android:name=".MainForm"	android:theme="@style/Theme.Sherlock"
                  android:configChanges="orientation|keyboardHidden" android:launchMode="singleTop"
                  android:uiOptions="splitActionBarWhenNarrow">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
			</intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>
		</activity>

        <activity android:name=".LibraryFrame" android:theme="@style/Theme.MDict" android:label="@string/library" android:configChanges="orientation|keyboardHidden"> </activity>
		<activity android:name=".FavoritesFrame" android:theme="@style/Theme.MDict" android:label="@string/favorites" android:configChanges="orientation|keyboardHidden"></activity>
		<activity android:name=".HistoryFrame" android:theme="@style/Theme.MDict" android:label="@string/history" android:configChanges="orientation|keyboardHidden"></activity>
        <activity android:name=".SettingFrame" android:theme="@style/Theme.MDict" android:label="@string/settings" android:configChanges="orientation|keyboardHidden"></activity>

        <provider android:name=".DictContentProvider" android:authorities="asset.mdict.cn;localfile.mdict.cn;mdd.mdict.cn;mdx.mdict.cn" />
    </application>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="13" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.SET_ORIENTATION" /> -->
</manifest> 